{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strictFunctionTypes": false,
    "esModuleInterop": true
  },
  "include": ["src"]
}
